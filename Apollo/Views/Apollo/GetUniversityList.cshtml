@model IEnumerable<Apollo.Data.University>
@* UniversityList - User Logged out View*@

@{
    ViewBag.Title = "Universities";
}

<h2 class="raleway">Universities</h2>

<table class="table">
    <tr>
        <th>
            @Html.Label("University ID")
        </th>
        <th>
            @Html.Label("University Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UniversityId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UniversityName)
        </td>
        <td>
            @Html.ActionLink("Courses", "GetCourses", new { id = item.UniversityId, universityName = item.UniversityName, applicantId = ViewBag.ApplicantId }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
