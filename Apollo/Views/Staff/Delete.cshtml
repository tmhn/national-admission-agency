@model Apollo.Data.University

@{
    ViewBag.Title = "Delete";
}

<h2 class="raleway">Delete University</h2>

<h3 class="raleway">Are you sure you want to delete this?</h3>
<div>
    <h4 class="raleway">@Html.DisplayFor(model => model.UniversityName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("University Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UniversityName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "StaffUniversityList", "Staff", new { userId = ViewBag.UserId }, new { @class = "btn btn-primary" })
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>
